<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Educational level:</strong>
  <%= @student.educational_level %>
</p>

<p>
  <strong>University:</strong>
  <%= @student.university %>
</p>

<p>
  <strong>Max book:</strong>
  <% if @student.educational_level == "Undergraduate" %>
  <p> 2 </p>
  <% end %>
  <% if @student.educational_level == "Masters" %>
  <p> 4 </p>
  <% end %>
  <% if @student.educational_level == "PhD" %>
  <p> 6 </p>
  <% end %>
</p>

