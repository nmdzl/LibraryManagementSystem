<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>University</th>
      <th>Location</th>
      <th>Max day</th>
      <th>Overdue fine</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <%if !@current_student.nil? %>
    <% if @current_student.admin  %>
  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= library.university %></td>
        <td><%= library.location %></td>
        <td><%= library.max_day %></td>
        <td><%= library.overdue_fine %></td>
        <td><%= link_to 'Show', library %></td>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= link_to 'New Library', new_library_path %>
    <% end %>
  <% end %>

  </tbody>

  <%if @current_student.nil? %>
    <tbody>

    <tr>
      <td><%= @current_librarian.library.name %></td>
      <td><%= @current_librarian.library.university %></td>
      <td><%= @current_librarian.library.location %></td>
      <td><%= @current_librarian.library.max_day %></td>
      <td><%= @current_librarian.library.overdue_fine %></td>
      <% @libraries.each do |library| %>
        <%if library == @current_librarian.library %>
          <!--td><%= link_to 'Show', library %></td-->
          <td><%= link_to 'Add Book To Library', new_book_path %></td>
          <td><%= link_to 'View Books In Your Library', books_in_your_library_path %></td>
          <td><%= link_to 'Edit Library', edit_library_path(library) %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>

</table>

<br>

    <% end %>

<%= link_to 'Back', home_path %>
