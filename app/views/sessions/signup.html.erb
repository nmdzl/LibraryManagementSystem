<%= form_for @student, :url => {:action =>'new_student'}, :html => {:method => "post"} do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name,  :input_html => {:id=>'name'} %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :input_html => {:id=>'password'} %>
  </div>
  <div class=" input-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, :input_html => {:id=>'email'} %>
  </div>
  <div class="field">
    <%= f.label :educational_level %><br>
    <%= f.text_field :educational_level %>
  </div>
  <div class="field">
    <%= f.label :university, "University" %><br>
    <%= f.text_field :university %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-primary'%>
  </div>
<% end %>